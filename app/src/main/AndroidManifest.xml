<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rupalisinha.banktask">

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme_white">

        <activity
            android:name="com.rupalisinha.banktask.splash_screen"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.rupalisinha.banktask.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name="com.rupalisinha.banktask.UserList"
            android:label="Banking App"
            android:screenOrientation="portrait"

            android:theme="@style/AppTheme"></activity>
        <activity
            android:name="com.rupalisinha.banktask.UserData"
            android:label="User Information"
            android:parentActivityName="com.rupalisinha.banktask.UserList"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.rupalisinha.banktask.sendtouser"
            android:label="Money Deposit"
            android:parentActivityName=".UserList"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.rupalisinha.banktask.HistoryList"
            android:label="Transactions"
            android:parentActivityName="com.rupalisinha.banktask.UserList"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
    </application>

</manifest>